@model ProjectLab.Models.View.ProductModelView

@{
    ViewData["Title"] = "EditProduct";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body class="layout-custom">
    <section class="container-fluid">
        <section class="row justify-content-center">
            <div class="form-custom color-beige">
                <form asp-action="Edit" method="post" enctype="multipart/form-data" class="form-container form-padding">
                    <h4 class="text-center font-weight-bold text-custom">Edit Product</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="form-group text-custom" style = "padding-top: 15px;">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group text-custom" style = "padding-top: 15px">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group text-custom" style = "padding-top: 15px">
                         <label asp-for="Price" class="control-label"></label>
                         <input asp-for="Price" class="form-control" min = "1"/>
                         <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                     <div class="form-group text-custom" style = "padding-top: 15px">
                         <label asp-for="ProductImage" class="control-label"></label>
                         <input type="file" asp-for="ProductImage" />
                         <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center"  style = "padding-top: 15px">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <div class="form-group text-custom text-center"  style = "padding-top: 15px">
                        <a href="@Url.Action("Details", "Products", new { productId = Model.ProductId })">Back to product details</a>
                    </div>
                </form>
            </div>
        </section>
    </section>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
</body>
</html>
